.container {
  padding: 0rpx;
}
.customBar {
  background: rgba(237, 237, 237, 0.9);
  top: 0rpx;
  line-height: 160rpx;
  color: #000;
}
.head_title {
  display: inline-block;
  position: absolute;
  bottom: 34rpx;
  left: 50%;
  transform: translate(-50%, 0px);
  line-height: 20rpx;
}
.topImage {
  width: 100%;
  /* height: 140rpx; */
  border-radius: 10rpx;
  position: absolute;
  width: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
}
.body {
  width: 100%;
  min-height: 70vh;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
  padding-top: 160rpx;
}
.essayBox {
  width: 100%;
}
.essayTitle {
  width: 100%;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 46rpx;
}
.essayCover {
  width: 100%;
}
.essayContent {
  width: 100%;
  min-height: 100rpx;
}
.essayContent .editor {
  min-height: 100rpx;
  height: auto;
}
.markLabel {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  border-bottom: solid 2rpx;
  font-size: 20rpx;
  background: #fff;
}
.perch {
  width: 100%;
  height: 40rpx;
}

.footerBox {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  background: #fff;
  padding-bottom: 30rpx;
}
.footerTitle {
  width: 100%;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 0rpx;
}
.footerBody {
  width: 100%;
}
.footerItem {
  width: 100%;
}
.footerItemCover {
  width: 60rpx;
}
.commentCover, .footerInputCover {
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
}
.commentCover {
  vertical-align: middle;
}
.commentTop {
  position: relative;
}
.commentName {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 60rpx;
}
.commentEndorse {
  right: 0rpx;
}
.endorseIcon {
  font-size: 36rpx;
  padding-right: 20rpx;
}
.endorseNum {
  font-size: 30rpx;
}
.commentContent {
  width: 100%;
  padding-bottom: 40rpx;
}
.footerLookAll {
  font-size: 26rpx;
  font-weight: 500;
  padding-bottom: 4rpx;
  border-bottom: solid 2rpx;
}
.attentionBtn {
  right: 0rpx;
}
.footerInputBox {
  width: 100%;
  height: 60rpx;
  background: #fff;
}
.footerInputBox.fix {
  position: fixed;
  width: 100vw;
  left: 0;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  background: #fff;
}
.footerInputInput {
  height: 60rpx;
  border-radius: 30rpx;
  border: solid 2rpx;
  padding: 0rpx 30rpx;
}
.footerInputCover {
  position: relative;
  top: 7rpx;
  text-align: center;
  margin: auto;
}
.footerInputCell, .footerItemCover {
  vertical-align: middle;
}
.utilBox {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  overflow-y: hidden;
  background: #fff;
  /* position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 10; */
}
.utilItem {
  float: right;
  padding: 0rpx 40rpx;
  text-align: center;
}
.utilIcon {
  font-size: 40rpx;
  transition: all 150ms;
}
.utilText {
  font-size: 20rpx;
}
.footerFixed {
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: calc( 10rpx + constant(safe-area-inset-bottom) );
  padding-bottom: calc( 10rpx + env(safe-area-inset-bottom) );
}
.notComment {
  padding: 40rpx 0rpx;
  text-align: center;
  font-size: 24rpx;
}
.textarea {
  width: 100%;
  margin: 20rpx 0rpx;
}
.star_box {
  width: 100%;
  padding: 20rpx 0rpx;
}
.buttonBox {
  width: 100%;
  text-align: right;
}
.btn {
  display: inline-block;
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
}
.footerBody_head_cell {
  width: 70rpx;
  vertical-align: top;
}
.footerBody_inshort_cell {
  vertical-align: top;
}
.footerBody_inshort_cell .authorName {
  padding: 10rpx 0rpx;
}
.footerBody_inshort_cell .evaluate_content {
  padding: 20rpx 0rpx;
}
.pageUtilBox {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background: #fff;
  position: relative;
  text-align: left;
}
.pageUtilBox .utilItem {
  padding: 0rpx 40rpx;
  text-align: center;
  display: inline-block;
}
.utilIcon {
  width: 56rpx;
  height: 56rpx;
}
.utilText {
  font-size: 20rpx;
  color: #3C3A65;
}
.footerFixed {
  width: 100%;
}
.moreUtil {
  display: inline-block;
  background: #7383FF;
  border-radius: 36rpx;
  padding: 16rpx 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.moreUtil_img {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.moreUtilList {
  position: absolute;
  bottom: calc( 100% + 23rpx );
  padding: 0rpx 34rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  z-index: 1;
}
.moreBg {
  position: fixed;
  top: 0rpx; right: 0rpx;
  bottom: 0rpx; left: 0rpx;
  z-index: 0;
}
.moreUtilList::after {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: -20rpx;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(45deg);
  background: #fff;
  box-shadow: 10rpx 10rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
}
.moreUtilItem {
  width: 180rpx;
  text-align: center;
  padding: 22rpx 0rpx;
  border-bottom: solid 2rpx rgba(239, 239, 239, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
}