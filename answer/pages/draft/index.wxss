.container {
  min-height: 100vh;
}
.customBar {
  color: #000;
}
.header {
  width: 100%;
  text-align: center;
}
.cover_img {
  width: 100%;
}
.editorStatusLabel {
  margin-bottom: 10rpx;
}
.inShortTextarea {
  padding: 10rpx;
  width: calc( 100% - 20rpx );
}
.integralBox {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.integral {
  padding: 10rpx 10rpx 10rpx 0rpx;
  border-radius: 20rpx;
  text-align: center;
  position: relative;
  display: inline-block;
  vertical-align: top;
}
.integralIcon {
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translate(0, -50%);
}
.integralInput {
  display: inline-block;
  width: 200rpx;
  vertical-align: middle;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.title {
  width: 100%;
  border-bottom: solid 2rpx;
  padding: 10rpx 0rpx;
  margin-bottom: 20rpx;
}
.integralLabel {
  font-size: 20rpx;
}
.titleInput {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
}
.cell {
  vertical-align: middle;
  width: 50%;
}
.group_title {
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
}
.editorBox {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  height: auto;
  margin-bottom: 20rpx;
}
.editor {
  width: 100%;
}

.footerFixed {
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: calc( 10rpx + constant(safe-area-inset-bottom) );
  padding-bottom: calc( 10rpx + env(safe-area-inset-bottom) );
}
.notComment {
  padding: 40rpx 0rpx;
  text-align: center;
  font-size: 24rpx;
}
.textarea {
  width: 100%;
  margin: 20rpx 0rpx;
}
.star_box {
  width: 100%;
  padding: 20rpx 0rpx;
}
.buttonBox {
  width: 100%;
  text-align: right;
}
.btn {
  display: inline-block;
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
}
.footerBody_head_cell {
  width: 70rpx;
  vertical-align: top;
}
.footerBody_inshort_cell {
  vertical-align: top;
}
.footerBody_inshort_cell .authorName {
  padding: 10rpx 0rpx;
}
.footerBody_inshort_cell .evaluate_content {
  padding: 20rpx 0rpx;
}
.pageUtilBox {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  background: #fff;
  position: relative;
  text-align: left;
}
.pageUtilBox .utilItem {
  padding: 0rpx 40rpx;
  text-align: center;
  display: inline-block;
}
.utilIcon {
  width: 56rpx;
  height: 56rpx;
}
.utilText {
  font-size: 20rpx;
  color: #3C3A65;
}
.footerFixed {
  width: 100%;
}
.moreUtil {
  display: inline-block;
  background: #7383FF;
  border-radius: 36rpx;
  padding: 16rpx 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.moreUtil_img {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.moreUtilList {
  position: absolute;
  bottom: calc( 100% + 23rpx );
  padding: 0rpx 34rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  z-index: 1;
}
.moreBg {
  position: fixed;
  top: 0rpx; right: 0rpx;
  bottom: 0rpx; left: 0rpx;
  z-index: 0;
}
.moreUtilList::after {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: -20rpx;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(45deg);
  background: #fff;
  box-shadow: 10rpx 10rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
}
.moreUtilItem {
  width: 180rpx;
  text-align: center;
  padding: 22rpx 0rpx;
  border-bottom: solid 2rpx rgba(239, 239, 239, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
}