.container {
  min-height: 100vh;
  overflow-y: scroll;
}
.customBar {
  color: #000;
}
.header {
  width: 100%;
  text-align: center;
}
.cover_img {
  width: 100%;
}
.buttons {
  text-align: right;
  padding: 18rpx 0rpx;
}
.button {
  display: inline-block;
  font-size: 34rpx;
  font-weight: 500;
  color: #7383FF;
}
.button:first-child {
  padding-right: 24rpx;
}
.integralBox {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.integral {
  padding: 10rpx 10rpx 10rpx 0rpx;
  border-radius: 20rpx;
  text-align: center;
  position: relative;
  display: inline-block;
  vertical-align: top;
}
.integralIcon {
  font-size: 40rpx;
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translate(0, -50%);
}
.integralInput {
  display: inline-block;
  width: 200rpx;
  vertical-align: middle;
  box-sizing: border-box;
  padding-left: 40rpx;
}
.title {
  width: 100%;
  border-bottom: solid 2rpx;
  padding: 10rpx 0rpx;
  margin-bottom: 20rpx;
}
.integralLabel {
  font-size: 20rpx;
}
.titleInput {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
}
.cell {
  vertical-align: middle;
  width: 50%;
}
.screen {
  text-align: right;
}
.inShortTextarea {
  width: 100%;
  min-height: 200rpx;
  margin-bottom: 20rpx;
}
.editorBox {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  height: auto;
}
.editor {
  width: 100%;
}
.editorStatus {
  width: 100%;
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 20rpx;
}
.editorStatusLabel {
  width: 100%;
  padding: 10rpx 0rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}