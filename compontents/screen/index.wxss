.screen {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}
.right {
  text-align: right;
}
.left {
  text-align: left;
}
.label {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 400;
  color: #C0C0C0;
  float: left;
  line-height: 72rpx;
  padding-left: 34rpx;
}
.search {
  /* width: 100%; */
  height: 64rpx;
  border-radius: 20rpx;
  border: solid 1rpx #00000024;
  position: relative;
}
.searchIcon {
  font-size: 30rpx;
  padding: 20rpx;
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translate(0, -50%);
}
.searchInput {
  width: 100%;
  box-sizing: border-box;
  padding-left: 70rpx;
  height: 100%;
  border: none;
}
.inline_block {
  display: inline-block;
  vertical-align: middle;
}
.picker {
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  text-align: center;
  margin: 0 10rpx;
  color: #C0C0C0;
  font-size: 28rpx;
  font-weight: 400;
}
.picker image {
  width: 12rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 6rpx;
}
.picker:last-child {
  margin-right: 0rpx;
}
.sortIcon {
  padding-left: 4rpx;
}
