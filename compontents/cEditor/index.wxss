.editor {
  width: 100%;
}
.editor:before {
  font-size: 34rpx;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 400;
  color: #A3A3A3;
  line-height: 48rpx;
  font-style: normal;
}
.editor.fix {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  height: auto !important;
  z-index: 10;
  padding: 40rpx;
  width: 100%;
}
.editorUtilBox {
  width: 100%;
  /* position: relative; */
  positions: fixed;
  height: auto;
  left: 0rpx;
  bottom: 0rpx;
  z-index: 11;
  transform: translate(0, 100%);
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.15);
  animation: bottom_show_an 300ms;
  animation-fill-mode: both;
}

@keyframes bottom_show_an {
  0% {
    transform: translate(0, 100%);
  }
  100% {
    transform: translate(0, 0);
  }
}
.utilItem {
  display: inline-block;
  vertical-align: middle;
  border-radius: 8rpx;
  text-align: center;
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.utilLeft {
  width: 124rpx;
  box-sizing: border-box;
  border-right: solid 2rpx rgba(222, 222, 222, 1);
  margin: 18rpx 0rpx;
  display: inline-block;
  text-align: center;
}
.utilIcon {
  width: 52rpx;
  height: 52rpx;
  vertical-align: middle;
  transition: all 300ms;
  font-size: 42rpx;
}
.utilIcon.rotate{
  transform: rotate(180deg);
}
.utilRight {
  width: calc( 100% - 130rpx );
  display: inline-block;
  text-align: right;
}
.utilR_img {
  width: 52rpx;
  height: 52rpx;
  display: inline-block;
  position: relative;
}
.utilR_img>image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.utilR_img>text {
  font-size: 36rpx;
  vertical-align: middle;
}
.utilR_fonts {
  position: absolute;
  bottom: calc( 100% + 34rpx );
  left: -80rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.15);
  white-space: nowrap;
  padding: 14rpx 40rpx;
  border-radius: 16rpx;
  z-index: 10;
}
.utilR_fonts::after {
  content: "";
  width: 50rpx;
  height: 50rpx;
  background: #ffffff;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.15);
  position: absolute;
  bottom: -18rpx;
  left: 82rpx;
  transform: rotate(45deg);
  z-index: -1;
}
.utilR_fonts text {
  vertical-align: bottom;
}
.utilR_fonts text:not(:last-child) {
  margin-right: 36rpx;
}
.h1 {
  font-size: 36rpx;
  font-weight: 500;
  color: #444444;
}
.h2 {
  font-size: 32rpx;
  font-weight: 500;
  color: #444444;
}
.h3 {
  font-size: 28rpx;
  font-weight: 500;
  color: #444444;
}
.text {
  font-size: 28rpx;
  font-weight: 400;
  color: #444444;
}