.commentsBox {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  bottom: 0rpx;
  background: #F9F9F9;
}
.comments {
  width: 100%;
  height: 100%;
  background: #F9F9F9;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.15);
}
.topBox {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
}
.pre {
  vertical-align: middle;
  font-size: 24rpx;
  width: 80rpx;
  text-align: center;
}
.inputView {
  width: 100%;
  height: 68rpx;
  border-radius: 10rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  line-height: 68rpx;
}
.input {
  width: 100%;
  height: 68rpx;
  border-radius: 10rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
}
.switchUtilBox {
  width: 68rpx;
  padding-top: 16rpx;
}
.switchUtil {
  text-align: center;
  height: 68rpx;
}
.switchUtilIcon {
  font-size: 60rpx;
  line-height: 68rpx;
}
.inputBox {
  vertical-align: middle;
  padding: 16rpx 20rpx;
}
.utilBox {
  height: 0rpx;
}
.fix {
  position: fixed;
  width: 100vw;
}
.utilItem {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border: solid 1rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  position: relative;
}
.utilItem .iconfont {
  font-size: 70rpx;
}
.comment_top {
  position: fixed;
  width: 100vw;
  min-height: 92rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  left: 0rpx;
  background: #F9F9F9;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  padding: 26rpx 32rpx;
  padding-bottom: calc( 26rpx + constant(safe-area-inset-bottom) );
  padding-bottom: calc( 26rpx + env(safe-area-inset-bottom) );
  z-index: 220;
}
.comment_top_text {
  width: calc( 100% - 120rpx );
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
}
.comment_top_text_btn {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translate(0, -50%);
  border-radius: 26rpx;
  background: #02CC96;
  padding: 14rpx 36rpx;
  color: #FFFFFF;
  font-size: 22rpx;
}
.input_placeholder {
  color: #CFCFCF;
}

.comment_bottom {
  box-sizing: border-box;
  padding: 16rpx 26rpx;
  background: #F9F9F9;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.15);
  width: 100%;
}
.comment_input {
  width: calc( 100% - 80rpx );
  display: inline-block;
  height: 68rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  border: 2px solid #EFEFEF;
  box-sizing: border-box;
  vertical-align: middle;
  line-height: 60rpx;
  padding: 0rpx 20rpx;
}
.comment_bottom_icon {
  width: 52rpx;
  height: 56rpx;
  margin-left: 28rpx;
  vertical-align: middle;
}