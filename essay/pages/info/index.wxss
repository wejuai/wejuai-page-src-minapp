.container {
  padding: 0rpx;
}
.customBar {
  background: rgba(237, 237, 237, 0.9);
  top: 0rpx;
  line-height: 160rpx;
  color: #000;
  height: auto;
}
.head_title {
  display: inline-block;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translate(-50%, 0px);
  line-height: 34rpx;
  max-width: 260rpx;
}
/* .tobackIcon {
  bottom: 20rpx !important;
} */
/* .customBar_home_icon {
  bottom: 14rpx !important;
} */
.topImage {
  width: 100%;
  /* height: 140rpx; */
  border-radius: 10rpx;
  position: absolute;
  width: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
}
.body {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
  padding-top: 160rpx;
  position: relative;
  overflow: hidden;
}
.body.max {
  min-height: 70vh;
}
.essayBox {
  width: 100%;
}
.essayTitle {
  width: 100%;
  font-size: 50rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}
.essayCover {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.essayContent {
  width: 100%;
  min-height: 100rpx;
}
.editor {
  min-height: 100rpx;
  height: auto;
}
.markLabel {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  font-size: 20rpx;
  background: #fff;
}
.perch {
  width: 100%;
  height: 40rpx;
}

.footerBox {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  background: #fff;
  padding-bottom: 30rpx;
}
.footerTitle {
  width: 100%;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 0rpx;
}
.footerBody {
  width: 100%;
  padding-bottom: 40rpx;
}
.footerItem {
  width: 100%;
  margin-bottom: 32rpx;
}
.footerItemCover {
  width: 72rpx;
}
.commentCover, .footerInputCover {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
}
.commentCover {
  vertical-align: middle;
}
.commentTop {
  position: relative;
}
.commentName {
  line-height: 72rpx;
  margin-left: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}
.commentEndorse {
  right: 0rpx;
}
.endorseIcon {
  font-size: 36rpx;
  padding-right: 20rpx;
}
.endorseNum {
  font-size: 30rpx;
}
.commentContent {
  width: 100%;
  padding-bottom: 10rpx;
  margin-left: 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #545454;
}
.footerLookAll {
  padding: 20rpx 0rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #545454;
  text-align: center;
}
.attentionBtn {
  right: 0rpx;
}
.footerInputBox {
  width: 100%;
  height: 60rpx;
  background: #fff;
  margin-bottom: 40rpx;
}
.footerInputBox.fix {
  position: fixed;
  width: 100vw;
  left: 0;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  padding-bottom: calc( 20rpx + constant(safe-area-inset-bottom) );
  padding-bottom: calc( 20rpx + env(safe-area-inset-bottom) );
  background: #fff;
  z-index: 10;
  margin-bottom: 0px;
}
.footerInputInput {
  height: 72rpx;
  border-radius: 30rpx;
  border: solid 2rpx;
  padding: 0rpx 30rpx;
  line-height: 72rpx;
  margin-left: 24rpx;
}
.issue {
  line-height: 78rpx;
  text-align: center;
}
.footerInputCover {
  text-align: center;
  margin: auto;
}
.footerInputCell, .footerItemCover {
  vertical-align: middle;
}
.pageUtilBox {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  padding-bottom: calc( 10rpx + constant(safe-area-inset-bottom) );
  padding-bottom: calc( 10rpx + env(safe-area-inset-bottom) );
  background: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  text-align: right;
}
.pageUtilBox::before {
  content: "";
  display: block;
  position: absolute;
  background: #fff;
  left: 0rpx;
  bottom: -40rpx;
  width: 100%;
  height: 40rpx;
}
.pageUtilBox .utilItem {
  padding: 0rpx 40rpx;
  text-align: center;
  display: inline-block;
}
.utilIcon {
  width: 56rpx;
  height: 56rpx;
}
.utilText {
  font-size: 20rpx;
  color: #3C3A65;
}
.footerFixed {
  width: 100%;
  padding-bottom: 200rpx;
}
.notComment {
  padding: 40rpx 0rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #A3A3A3;
}
.unlockShade {
  position: fixed;
  width: 100vw;
  height: 75vh;
  bottom: 0px;
  left: 0px;
}
.unlockShade_gradual {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 40vh;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.99) 30%, rgba(255, 255, 255, 1) 100%);
}
.unlockShade_button {
  position: absolute;
  left: 50%;
  bottom: 300rpx;
  display: inline-block;
  text-align: center;
  transform: translate(-50%, 0);
  font-size: 28rpx;
  font-weight: 500;
  color: #272727;
  border-bottom: 2rpx solid rgba(39, 39, 39, 1);
}
.footerItemTime {
  position: relative;
  height: 44rpx;
}
.commentTime {
  font-size: 24rpx;
  font-weight: 400;
  color: #A3A3A3;
  line-height: 44rpx;
}
.commentButtoms {
  position: absolute;
  top: -4rpx;
  right: 0rpx;
  height: 100%;
}
.button {
  display: inline-block;
}
.button:first-child {
  margin-right: 16px;
}
.btnImg {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}
.btnNum {
  padding-left: 4rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #A3A3A3;
  vertical-align: middle;
}
.com_coverBox {
  width: 72rpx;
  display: inline-block;
  vertical-align: top;
}
.com_cover {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  vertical-align: top;
}
.com_conBox {
  display: inline-block;
  box-sizing: border-box;
  width: calc( 100% - 74rpx );
  padding-left: 24rpx;
}
.com_name {
  position: relative;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  line-height: 40rpx;
}
.com_more {
  position: absolute;
  top: -2rpx;
  right: 0rpx;
  width: 44rpx;
  height: 44rpx;
}
.com_text {
  padding-top: 4rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #545454;
}
.com_timeBox {
  position: relative;
  height: 44rpx;
}
.com_time {
  font-size: 24rpx;
  font-weight: 400;
  color: #A3A3A3;
  line-height: 44rpx;
}
.com_right {
  width: 16rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 8rpx;
}
.moreUtil {
  position: absolute;
  top: 16rpx; left: 34rpx;
  background: #7383FF;
  border-radius: 36rpx;
  padding: 16rpx 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.moreUtil_img {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.moreUtilList {
  position: absolute;
  bottom: calc( 100% + 23rpx );
  padding: 0rpx 34rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  z-index: 1;
}
.moreBg {
  position: fixed;
  top: 0rpx; right: 0rpx;
  bottom: 0rpx; left: 0rpx;
  z-index: 0;
}
.moreUtilList::after {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: -20rpx;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(45deg);
  background: #fff;
  box-shadow: 10rpx 10rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
}
.moreUtilItem {
  width: 180rpx;
  text-align: center;
  padding: 22rpx 0rpx;
  border-bottom: solid 2rpx rgba(239, 239, 239, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
}


.buttonBoxBg {
  position: fixed;
  top: 0rpx; right: 0rpx;
  bottom: 0rpx; left: 0rpx;
  z-index: 2;
  background: rgba(0, 0, 0, 0.3);
}
.buttonBoxBg.show {
  display: block;
}
.buttonBoxBg.hide {
  display: none;
}
.buttonBox {
  position: fixed;
  bottom: 0rpx; left: 0rpx;
  width: 100vw;
  z-index: 3;
  background: #fff;
  transform: translate(0, 100%);
  transition: all 300ms;
  padding-bottom: env(safe-area-inset-bottom); /* 兼容 iOS >= 11.2 */
  padding-bottom: constant(safe-area-inset-bottom); /* 兼容 iOS < 11.2 */
  border-radius: 60rpx 60rpx 0rpx 0rpx;
}
.buttonBox.show {
  transform: translate(0, 0);
}
.bnbx_title {
  background: #F6F6F6;
  border-radius: 60rpx 60rpx 0rpx 0rpx;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #A3A3A3;
}
.bnbx_body {
  background: #fff;
  box-sizing: border-box;
  padding: 78rpx 20rpx;
  text-align: center;
}
.bnbx_item {
  width: 66prx;
  display: inline-block;
  vertical-align: top;
  margin-left: 84rpx;
}
.bnbx_item:first-child {
  margin-left: 0rpx;
}
.bnbx_item image {
  width: 66rpx;
  height: 66rpx;
  margin-bottom: 4rpx;
}
.bnbx_item view {
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
}
.bnbx_foot {
  padding: 36rpx 0rpx;
  margin: 0rpx 32rpx;
  border-top: solid 2rpx rgba(239, 239, 239, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
  text-align: center;
}