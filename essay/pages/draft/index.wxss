.container {
  min-height: 100vh;
  overflow-y: scroll;
  padding-bottom: 140rpx;
}
.customBar {
  color: #000;
}
.essayContent {
  height: 800rpx;
}
.header {
  width: 100%;
  margin-bottom: 40rpx;
}
.cover_box {
  display: inline-block;
}
.cover_box .iconfont {
  font-size: 56rpx;
  color: #fff;
  font-weight: bold;
  display: block;
}
.cover_box .iconText {
  font-size: 28rpx;
  font-weight: 500;
  color: #A3A3A3;
  line-height: 40rpx;
}
.cover_icon {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  background: #EFEFEF;
  border-radius: 16rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.cover_img {
  width: calc( 100vw - 40rpx );
  height: 266rpx;
  border-radius: 16rpx;
}
.integralBox {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.integral {
  height: 80rpx;
  border-radius: 40rpx;
  position: relative;
  display: inline-block;
  padding: 0rpx 30rpx;
  border: 2px solid #3C3A65;
  margin-bottom: 8rpx;
}
.integralIcon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.integralInput {
  display: inline-block;
  width: 200rpx;
  vertical-align: middle;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}
.title {
  width: 100%;
  padding: 20rpx 0rpx;
}
.integralLabel {
  font-size: 20rpx;
}
.titleInput {
  width: 100%;
  box-sizing: border-box;
  font-size: 46rpx;
  line-height: 48rpx;
}
.cell {
  vertical-align: middle;
  width: 50%;
}
.screen {
  text-align: right;
}
.editorBox {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  height: auto;
}
.editor {
  width: 100%;
}
.pageUtilBox {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  background: #fff;
  position: relative;
  text-align: left;
}
.pageUtilBox .utilItem {
  padding: 0rpx 40rpx;
  text-align: center;
  display: inline-block;
}
.utilIcon {
  width: 56rpx;
  height: 56rpx;
}
.utilText {
  font-size: 20rpx;
  color: #3C3A65;
}
.footerFixed {
  width: 100%;
}
.moreUtil {
  display: inline-block;
  background: #7383FF;
  border-radius: 36rpx;
  padding: 16rpx 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.moreUtil_img {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.moreUtilList {
  position: absolute;
  bottom: calc( 100% + 23rpx );
  padding: 0rpx 34rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  z-index: 1;
}
.moreBg {
  position: fixed;
  top: 0rpx; right: 0rpx;
  bottom: 0rpx; left: 0rpx;
  z-index: 0;
}
.moreUtilList::after {
  content: "";
  position: absolute;
  left: 30rpx;
  bottom: -20rpx;
  width: 40rpx;
  height: 40rpx;
  transform: rotate(45deg);
  background: #fff;
  box-shadow: 10rpx 10rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
}
.moreUtilItem {
  width: 180rpx;
  text-align: center;
  padding: 22rpx 0rpx;
  border-bottom: solid 2rpx rgba(239, 239, 239, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #3C3A65;
}