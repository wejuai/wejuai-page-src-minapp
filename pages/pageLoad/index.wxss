.pageLoad {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.loadBox {
  position: absolute;
  top: 260rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 400rpx;
  height: 150rpx;
}
.load_1, .load_2, .load_3 {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  border-radius: 50%;
  opacity: 0.7;
}
.load_1::after, .load_2::after, .load_3::after {
  content: "";
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -120rpx;
  border-radius: 50%;
}
.load_1 {
  top: 0;
  left: 100rpx;
}
.load_2 {
  top: 0;
  left: 250rpx;
}
.load_3 {
  top: 120rpx;
  left: 160rpx;
  height: 60rpx;
}
.load_1::after {
  top: -80rpx;
  background: blue;
}
.load_2::after {
  top: 60rpx;
  left: 100rpx;
  background: lawngreen;
}
.load_3::after {
  top: 70rpx;
  background: red;
