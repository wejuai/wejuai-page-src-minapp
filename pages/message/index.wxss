
.customBar {
  background: #EDEDED;
  font-size: 34rpx;
  font-family: "SFProDisplay-Medium", "SFProDisplay";
  font-weight: 500;
  color: #000000;
  border-bottom: solid 2rpx rgba(0, 0, 0, 0.1);
  transition: all 500ms;
}
.msgListBox {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 0rpx 0rpx 26rpx;
}
.msgItem {
  width: 100%;
  padding: 24rpx 0rpx;
  position: relative;
}
.newMark {
  position: absolute;
  top: 58rpx;
  right: 0rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 24rpx;
  font-family: "YouSheBiaoTiHei";
  line-height: 40rpx;
  text-align: center;
}
.newMarkSys {
  position: absolute;
  top: 58rpx;
  right: 0rpx;
  width: 78rpx;
  height: 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 24rpx;
  font-family: "YouSheBiaoTiHei";
  line-height: 40rpx;
  text-align: center;
  font-weight: 500;
}
.msgItem::after {
  content: "";
  width: calc( 100% - 130rpx );
  height: 1rpx;
  background-color: #EFEFEF;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
}
.msgItemCover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  display: inline-block;
}
.msgCover, .message-index--msgCover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hiddle;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.msgItemTextName {
  color: #272727;
  max-width: calc( 100% - 126rpx );
  line-height: 48rpx;
  font-size: 34rpx;
  font-weight: 400;
  padding-bottom: 2rpx;
  box-sizing: border-box;
}
.msgItemText {
  display: inline-block;
  position: relative;
  box-sizing: border-box;
  padding-left: 26rpx;
  width: calc( 100% - 130rpx );
}
.msgItemTextMsg {
  color: #BDBDBD;
  font-size: 28rpx;
  max-width: calc( 100% - 50rpx );
  box-sizing: border-box;
}
.msgItemTextMsgSys {
  max-width: calc( 100% - 150rpx );
}
.msgItemIextTime {
  color: #BDBDBD;
  font-size: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 0rpx;
  font-weight: 400;
}