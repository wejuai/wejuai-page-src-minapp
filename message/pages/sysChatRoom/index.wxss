.chatRoomBox {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}
.chatRoomList {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.chatListBox {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.chatTop {
  width: 100%;
  padding: 20rpx 0rpx;
  text-align: center;
}
.moreIconBox {
  font-size: 24rpx;
}
.list {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding: 0rpx 26rpx;
}
.msgTime {
  font-size: 22rpx;
  padding: 10rpx 0rpx 30rpx;
  text-align: center;
}
.listItem {
  width: 100%;
}
.personal {
  text-align: right;
}
.avaterBox {
  display: inline-block;
  width: 75rpx;
  height: 75rpx;
  vertical-align: middle;
}
.avaterBox .avaterBox_img {
  width: 100%;
  height: 100%;
}
.adverse .avaterBox {
  margin-right: 20rpx;
}
.personal .avaterBox {
  margin-left: 20rpx;
}
.avaterBox .image{
  width: 75rpx;
  height: 75rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.msgBox {
  padding: 12rpx 23rpx;
  position: relative;
  border-radius: 10rpx;
  max-width: 50%;
  word-wrap:break-word;
  font-size: 32rpx;
  display: inline-block;
  vertical-align: middle;
}
.msgBox::after {
  content: "";
  position: absolute;
  border: solid 10rpx;
  top: 50%;
  transform: translate(0, -50%);
}
.markNew {
  position: absolute;
  top: 0rpx;
  right: -55rpx;
  display: inline-block;
  font-size: 16rpx;
  color: red;
  font-weight: 600;
}
.markBtn {
  position: absolute;
  bottom: 0rpx;
  right: -120rpx;
  display: inline-block;
  font-size: 26rpx;
  padding: 10rpx 0rpx;
  font-weight: 500;
}
.adverse .msgBox {
  background: #ffffff;
  color: #1C1C1C;
}
.personal .msgBox {
  color: #fff;
}
.adverse .msgBox::after {
  border-color: transparent #ffffff transparent transparent;
  left: -20rpx;
}
.personal .msgBox::after {
  border-color: transparent transparent transparent #4DC4FF;
  right: -20rpx;
}
.chatRoomComment {
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
}
.newMsgBottom {
  position: fixed;
  width: 100%;
  bottom: 100rpx;
  left: 0rpx;
}
.newMsgBottomIcon {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  font-size: 50rpx;
  padding: 0rpx 60rpx;
}