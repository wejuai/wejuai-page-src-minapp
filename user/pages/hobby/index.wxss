.hobbyes {
  width: 100%;
  height: 100vh;
  padding: 20rpx 34rpx;
  box-sizing: border-box;
  background: #fff;
  overflow-y: auto;
}
.hobby_item_box {
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 0rpx 0rpx;
}
.hobby_item_cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.hobby_item_info {
  width: calc( 100% - 150rpx );
  margin-left: 24rpx;
  padding-bottom: 16px;
  border-bottom: 4rpx solid #F5F5F5;
  display: inline-block;
  vertical-align: top;
}
.name {  
  font-size: 34rpx;
  font-weight: 600;
  line-height: 70rpx;
  color: #272727;
}
.inshort {
  font-size: 28rpx;
  font-weight: 400;
  color: #A3A3A3;
}