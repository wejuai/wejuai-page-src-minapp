/**index.wxss**/
page {
  background: #F7F7F7;
}
.container {
  padding: 0rpx;
}
.cover {
  width: 100%;
  height: 369rpx;
}
.cover_img {
  width: 100%;
  height: 100%;
}
.intro, .works {
  width: 100%;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  padding-left: 40rpx;
}
.intro_avater {
  width: 100%;
  text-align: center;
  background: #fff;
  padding: 72rpx 0rpx 56rpx;
  margin-bottom: 20rpx;
}
.intro_avater_img {
  width: 176rpx;
  height: 176rpx;
  border-radius: 50%;
  margin: auto;
}
.intro_item {
  padding-top: 38rpx;
  overflow: hidden;
  position: relative;
}
.item_label {
  float: left;
  width: 120rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #A3A3A3;
}
.item_value {
  margin-left: 130rpx;
  padding-bottom: 40rpx;
  border-bottom: solid 2rpx rgba(151, 151, 151, 0.1);
  width: calc( 100% - 130rpx );
}
.item_value input {
  width: 100%;
  border: none;
  box-sizing: border-box;
  padding-right: 60rpx;
}
.icon_r {
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  top: 50%;
  right: 64rpx;
  transform: translate(0, -50%) rotate(90deg);
}
.btns {
  width: 100%;
  padding-top: 56rpx;
  box-sizing: border-box;
  text-align: center;
}
.btn {
  text-align: center;
  display: inline-block;
  margin: auto;
  border-radius: 50rpx;
  padding: 16rpx 162rpx;
  font-weight: 500;
  font-size: 34rpx;
  width: calc( 100% - 76rpx );
  box-sizing: border-box;
}