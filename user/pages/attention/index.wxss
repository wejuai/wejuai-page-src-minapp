.attention {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 17rpx;
}
.list {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  background: #fff;
}
.item {
  width: 100%;
  box-sizing: border-box;
  padding-top: 20rpx;
  position: relative;
}
.searchBox {
  width: 100%;
  position: relative;
  margin: auto;
  display: inline-block;
  vertical-align: middle;
}
.searchInput {
  width: 100%;
  border-radius: 40rpx;
  background: #EFEFEF;
  height: 68rpx;
  padding: 0 30rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  transition: all 300ms;
}
.searchInputPlaceholder {
  color: #A3A3A3;
  transition: all 300ms;
}
.searchIcon {
  padding: 0rpx 20rpx;
  padding-left: 28rpx;
  position: absolute;
  top: 50%;
  left: 0rpx;
  transform: translate(0, -40%);
}
.searchIcon>image {
  width: 37rpx;
  height: 37rpx;
}
.avater {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: inline-block;
}
.info {
  display: inline-block;
  margin-left: 24rpx;
  width: calc( 100% - 120rpx );
  border-bottom: solid 4rpx #F5F5F5;
  padding-bottom: 20rpx;
}
.list .item:last-child .info {
  border-bottom: none;
}
.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #272727;
  padding-bottom: 10rpx;
}
.inShort {
  font-size: 26rpx;
  font-weight: 500;
  color: #A3A3A3;
  width: calc( 100% - 140rpx );
}
.option {
  position: absolute;
  top: 50%;
  right: 0rpx;
  transform: translate(0, -50%);
}
.option_btn {
  padding: 6rpx 20rpx;
  border-radius: 34px;
  border: 2px solid #7383FF;
  font-size: 26rpx;
  font-weight: 400;
  color: #7383FF;
}
.option_btn:not(:first-child) {
  margin-left: 10rpx;
}