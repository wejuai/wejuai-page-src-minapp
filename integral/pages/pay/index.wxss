.body {
  margin-top: 180rpx;
  text-align: center;
}
.integralIcon {
  width: 312rpx;
  height: 312rpx;
  border-radius: 50%;
  margin-top: 50rpx;
}
.payIntegral {
  font-size: 120rpx;
  font-weight: bold;
  color: rgba(68, 68, 68, 1);
}
.meIntegral {
  font-size: 28rpx;
  font-weight: 400;
  color: #C0C0C0;
  line-height: 40px;
}
.buttons {
  display: inline-block;
  margin: 104rpx auto 0rpx;
}
.button {
  width: 368rpx;
  padding: 20rpx 0rpx;
  text-align: center;
  border: solid 2rpx;
  font-size: 24rpx;
  font-weight: 400;
  border-radius: 42rpx;
  margin-bottom: 38rpx;
}

.payShade {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100vw;
  height: 100vh;
}
.payShade_inbox {
  position: absolute;
  top: 50%;
  left: 50%;
  padding: 50px 0rpx;
  text-align: center;
  width: 368rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  transform: translate(-50%, -50%);
}
.payShade .iconfont {
  font-size: 80rpx;
  color: #fff;
}
.payShade .shadeTxt {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
  padding-top: 6rpx;
}