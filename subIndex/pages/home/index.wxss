.customBar_search_box {
  position: absolute;
  left: 21vw;
  bottom: 16rpx;
  width: 50vw;
  height: 64rpx;
}
.customBar_search_icon_box {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  text-align: center;
  line-height: 56rpx;
  transition: all 300ms;
  opacity: 0.99;
}
.customBar_search_icon_box.hide {
  opacity: 0;
}
.customBar_search_icon {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
}
.customBar_search_txt {
  padding-left: 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C0C0C0;
  vertical-align: middle;
}
.customBar_search_input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  background: rgba(0, 0, 0, 0.39);
  border-radius: 34rpx;
  text-align: left;
}

.container {
  padding: 0rpx;
}
.header {
  position: relative;
  width: 100%;
}
.headBackground {
  width: 100%;
  height: 100%;
}
.headBox {
  box-sizing: border-box;
  padding: 20rpx 34rpx;
  bottom: 0rpx;
}
.seachBox {
  width: 100%;
  height: 70rpx;
  position: relative;
  margin-bottom: 40rpx;
}
.seachInput {
  width: 100%;
  height: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  padding-left: 80rpx;
  font-size: 30rpx;
  border-radius: 80rpx;
}
.seachIcon {
  left: 0rpx;
  font-size: 30rpx;
  padding: 0rpx 20rpx 0rpx 30rpx;
}
.hobbyInfoBox {
  width: 100%;
  box-sizing: border-box;
  position: relative;
}
.hobbyIcon {
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
}
.hobbyName {
  font-size: 34rpx;
  color: #fff;
  display: inline-block;
}
.hobbyDealIcon {
  right: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.starIcon {
  display: inline-block;
  font-size: 48rpx;
  color: rgba(115, 131, 255, 1);
  vertical-align: middle;
  margin-left: 28rpx;
  width: 48rpx;
  height: 48rpx;
}
.attentionBtn {
  margin-top: 10rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.avatarBox {
  width: 120rpx;
}
.nameBox {
  padding-left: 40rpx;
  vertical-align: middle;
}