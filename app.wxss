  50% {
    border-radius: 20% 70% 70% 20% / 20% 70% 20% 70%;
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 转圈 */
.an_circle {
  animation: circle 2.5s infinite ease;
}
@keyframes circle
{
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
@keyframes circle_reverse
{
  0% {
    transform: rotate(360deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

/* 字体闪烁 */
.an_fontFlicker {
  opacity: 0.1;
  animation: an_fontFlicker 1s infinite ease-in-out alternate;
}
@keyframes an_fontFlicker {
  0% {
    opacity: 0.1;
  }

  100% {
    opacity: 0.999999;
  }
}

/* 原点旋转一周 */
.an_rotate {
  animation: rotate 1s infinite ease-in-out;
}
@keyframes rotate
{
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 模糊进入 */
.an_blur_in {
  animation: blur_in 1s ease-in-out;
}
@keyframes blur_in
{
  0% {
    -webkit-filter: blur(10rpx); /* Chrome, Opera */
    -moz-filter: blur(10rpx);
    -ms-filter: blur(10rpx);
    filter: blur(10rpx);
  }
  50% {
    -webkit-filter: blur(5rpx); /* Chrome, Opera */
    -moz-filter: blur(5rpx);
    -ms-filter: blur(5rpx);
    filter: blur(5rpx);
  }
  100% {
    -webkit-filter: blur(0rpx); /* Chrome, Opera */
    -moz-filter: blur(0rpx);
    -ms-filter: blur(0rpx);
    filter: blur(0rpx);
  }
}

/* 模糊循环 */
.an_blur_in_out {
  animation: blur_in_out 2s infinite ease-in-out;
}
@keyframes blur_in_out
{
  0% {
    -webkit-filter: blur(4rpx); /* Chrome, Opera */
    -moz-filter: blur(4rpx);
    -ms-filter: blur(4rpx);
    filter: blur(4rpx);
  }
  50% {
    -webkit-filter: blur(0rpx); /* Chrome, Opera */
    -moz-filter: blur(0rpx);
    -ms-filter: blur(0rpx);
    filter: blur(0rpx);
  }
  100% {
    -webkit-filter: blur(4rpx); /* Chrome, Opera */
    -moz-filter: blur(4rpx);
    -ms-filter: blur(4rpx);
    filter: blur(4rpx);
  }
}