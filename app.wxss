/**app.wxss**/
page {
  padding: 0rpx;
  margin: 0rpx;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  font-family: "PingFangSC-Regular", "PingFang SC";
}
.container {
  width: 100%;
  height: 100vh;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
