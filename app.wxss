/* table布局 */
.table {
  display: table;
  width: 100%;
}
.row {
  display: table-row;
}
.cell {
  display: table-cell;
}
.column {
  display: table-column;
}

/* 兼容 iPhoneX */
.iphone-pd {
  padding-bottom: env(safe-area-inset-bottom); /* 兼容 iOS >= 11.2 */
  padding-bottom: constant(safe-area-inset-bottom); /* 兼容 iOS < 11.2 
  */
}

/* 仿 s 标签 */
.s {
  text-decoration:line-through;
}

/* 溢出省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.ellipsis_2 {
  word-break:break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.ellipsis_3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 文章、悬赏标志 */
.mark {
  position: absolute;
  width: 300rpx;
  text-align: center;
  padding: 10rpx;
  color: #fff;
  font-weight: 500;
  font-size: 24rpx;
  box-shadow: 1rpx 2rpx 10rpx rgba(138, 112, 8, 0.644);
}
.mark.top {
  top: 28rpx;
}
.mark.bottom {
  bottom: 28rpx;
}
.mark.right {
  right: -110rpx;
}
.mark.left {
  left: -110rpx;
}
.mark.right.top, .mark.left.bottom {
  transform: rotate(45deg);
}
.mark.left.top, .mark.right.bottom {
  transform: rotate(-45deg);
}

