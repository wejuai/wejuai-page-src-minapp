/* 暂无更多 */
.moreNull {
  width: 100%;
  text-align: center;
  margin: 70rpx 0rpx 46rpx;
  font-size: 13px;
  position: relative;
  color: #cccccc;
}
.moreNull::after, .moreNull::before {
  content: "";
  position: absolute;
  top: 50%;
  width: 109rpx;
  height: 2rpx;
  background-color: #cccccc;
}
.moreNull::after {
  left: calc( 50% - 140rpx );
  transform: translate(-50%, -50%);
}
.moreNull::before {
  right: calc( 50% - 140rpx );
  transform: translate(50%, -50%);
}
