/* 铺满 */
.ab-full {
  position: absolute;
  top: 0; right: 0;
  left: 0;
  z-index: 10;
}
/* 上下居中 */
.p_m_r {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
}
/* 上下左右居中 */
.p_m_c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 动画 */
/* 上下浮动 */
.an_upDown {
  animation: upDown 1s infinite ease-in-out alternate;
}
@keyframes upDown
{
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(0, 30rpx);
  }
}

/* 光环 */
.an_aureole {
  width: 100%;
  height: 100%;
  position: relative;
}
.an_aureole .an_aureole_sub {
  position: absolute;
  top: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  left: -2rpx;
  animation: aureole 21s infinite linear;
  mix-blend-mode: multiply;
  filter: blur(0.5vw);
  border-radius: 50%;
  background-color: yellow;
}
.an_aureole .an_aureole_sub:nth-child(2) {
  background-color: magenta;
  animation-delay: -14s;
}
.an_aureole .an_aureole_sub:nth-child(3) {
  background-color: cyan;
  animation-delay: -7s;
}
@keyframes aureole {
  25%,
